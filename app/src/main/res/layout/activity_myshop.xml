<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myshop"
    android:id="@+id/drawer"
    tools:openDrawer="start">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingClass">
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="411dp"
                android:layout_height="53dp"
                android:backgroundTint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/purple_200"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"
                    app:title="MY SHOP"
                    app:titleTextColor="@color/white">

                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>
            <ImageView
                android:id="@+id/addimg1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_add_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.212"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="96dp"
                android:layout_height="36dp"
                android:layout_marginTop="52dp"
                android:background="#85C1E9"
                android:gravity="center"
                android:text="Name"
                app:layout_constraintEnd_toStartOf="@+id/name"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addimg1"
                tools:ignore="MissingConstraints" />
            <EditText
                android:id="@+id/name"
                android:layout_width="300dp"
                android:layout_height="37dp"
                android:layout_marginTop="52dp"
                android:fontFamily="sans-serif-light"
                android:hint="xyz"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/addimg2"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="94dp"
                android:layout_height="38dp"
                android:layout_marginTop="16dp"
                android:background="#85C1E9"
                android:gravity="center"
                android:text="Phone Number"
                app:layout_constraintEnd_toStartOf="@+id/phone"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:ignore="MissingConstraints" />
            <EditText
                android:id="@+id/phone"
                android:layout_width="301dp"
                android:layout_height="41dp"
                android:layout_marginTop="12dp"
                android:hint="8946551698"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/name"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:layout_marginTop="24dp"
                android:background="#85C1E9"
                android:gravity="center"
                android:text="E-mail"
                app:layout_constraintEnd_toStartOf="@+id/email"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/category"
                tools:ignore="MissingConstraints" />
            <EditText
                android:id="@+id/email"
                android:layout_width="303dp"
                android:layout_height="42dp"
                android:layout_marginTop="24dp"
                android:hint="xyz@gmail.com"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/category"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/addimg2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_add_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toEndOf="@+id/addimg1"
                app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="89dp"
                android:layout_height="36dp"
                android:layout_marginTop="28dp"
                android:background="#85C1E9"
                android:gravity="center"
                android:text="Category"
                app:layout_constraintEnd_toStartOf="@+id/category"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:ignore="MissingConstraints" />
            <EditText
                android:id="@+id/category"
                android:layout_width="300dp"
                android:layout_height="39dp"
                android:layout_marginTop="28dp"
                android:hint="pots,medicines"
                app:layout_constraintBottom_toTopOf="@+id/email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/phone"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:background="#85C1E9"
                android:gravity="center"
                android:text="Pincode"
                app:layout_constraintBottom_toTopOf="@+id/textView8"
                app:layout_constraintEnd_toStartOf="@+id/landmark"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:layout_constraintVertical_bias="0.416"
                tools:ignore="MissingConstraints" />
            <EditText
                android:id="@+id/landmark"
                android:layout_width="306dp"
                android:layout_height="39dp"
                android:layout_marginTop="24dp"
                android:hint="delhi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/email"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/textView8"
                android:layout_width="88dp"
                android:layout_height="38dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="36dp"
                android:background="#85C1E9"
                android:gravity="center"
                android:text="Address"
                app:layout_constraintEnd_toStartOf="@+id/address"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/landmark"
                tools:ignore="MissingConstraints" />
            <EditText
                android:id="@+id/address"
                android:layout_width="312dp"
                android:layout_height="38dp"
                android:layout_marginTop="36dp"
                android:hint="Dno:4-5-6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/landmark"
                tools:ignore="MissingConstraints" />
            <Button
                android:id="@+id/save"
                android:layout_width="80dp"
                android:layout_height="47dp"
                android:layout_marginTop="24dp"
                android:text="Save"
                app:layout_constraintTop_toBottomOf="@+id/address"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="151dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navdrw"
        app:menu="@menu/icon"
        app:headerLayout="@layout/header"
        android:layout_gravity="start">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>